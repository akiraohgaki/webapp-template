    "esbuild": "*",
    "eslint": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "jest": "*",
    "jest-environment-jsdom": "*",
    "jest-junit": "*",
    "jest-mock": "*",
    "prettier": "*",
    "react": "*",
    "react-dom": "*",
    "react-router-dom": "*",
    "recoil": "*",
    "ts-jest": "*",
    "typescript": "*"
  }
