{
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "files": {
      "include": [
        "src/"
      ]
    }
  },
  "tasks": {
    "clean": "sh scripts/clean.sh public 'src/*.html src/*.ico src/*.png src/assets'",
    "bundle": "deno run --allow-env --allow-read --allow-write --allow-net scripts/bundle.ts src/main.ts public/main.bundle.js",
    "build": "deno task clean && deno fmt && deno lint && deno test && deno task bundle"
  }
}
