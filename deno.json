{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "src/data/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "src/data/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "tasks": {
    "clear": "rm -rf public && mkdir public",
    "bundle": "deno bundle src/main.ts public/main.bundle.js",
    "asset": "sh -c 'cp -a src/index.html src/assets public'",
    "test": "echo 'Skip test'",
    "build": "deno fmt && deno lint && deno task clear && deno task bundle && deno task asset && deno task test"
  }
}
